<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="470dp"
            android:background="@drawable/sh_shape_layouts_full"

            >
            <ImageView
                android:id="@+id/addDateBack"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:src="@drawable/i_back_arrow"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"/>
            <ImageView
                android:id="@+id/deleteItem"
                android:visibility="gone"
                android:layout_width="40dp"
                android:layout_height="70dp"
                android:src="@drawable/baseline_delete_24"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="16dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_below="@id/addDateBack"
                android:layout_marginStart="16dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="16dp"
                >
                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Year"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:fontFamily="@font/product_sans_bold"/>
                <EditText
                    android:id="@+id/edtYear"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="4"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="64dp"
                    android:layout_marginEnd="64dp"
                    android:background="@drawable/sh_shape_edt_add_day"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Month"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/product_sans_bold"/>
                <EditText
                    android:id="@+id/edtDateAddDay"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="64dp"
                    android:layout_marginEnd="64dp"
                    android:background="@drawable/sh_shape_edt_add_day"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Day"
                    android:textSize="24sp"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/product_sans_bold"/>
                <EditText
                    android:id="@+id/edtDayAddDay"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="64dp"
                    android:layout_marginEnd="64dp"
                    android:background="@drawable/sh_shape_edt_add_day"/>

            </LinearLayout>

        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="Select Day Week"
            android:gravity="center"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:fontFamily="@font/product_sans_bold"/>
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="12dp"

            android:orientation="horizontal"
            android:gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <LinearLayout
                android:id="@+id/saturdayIc"

                android:layout_width="90dp"
                android:layout_height="90dp"
                android:orientation="vertical"

                >
                <ImageView

                    android:paddingTop="4dp"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/w_saturday"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saturday"
                    android:textSize="13sp"
                    android:paddingBottom="4dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/sundayIc"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:orientation="vertical">
                <ImageView
                    android:paddingTop="4dp"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/w_sunday"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sunday"
                    android:textSize="13sp"
                    android:paddingBottom="4dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/mondayIc"

                android:layout_width="90dp"
                android:layout_height="90dp"
                android:orientation="vertical">
                <ImageView
                    android:paddingTop="4dp"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/w_monday"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monday"
                    android:textSize="13sp"
                    android:paddingBottom="4dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/tuesdayIc"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:orientation="vertical">
                <ImageView
                    android:paddingTop="4dp"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/w_tuesday"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tuesday"
                    android:textSize="13sp"
                    android:paddingBottom="4dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            tools:layout_editor_absoluteX="51dp">
            <LinearLayout
                android:id="@+id/wednesdayIc"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
                android:layout_marginEnd="4dp"
                android:orientation="vertical">
                <ImageView
                    android:paddingTop="4dp"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/w_wednesday"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wednesday"
                    android:textSize="12sp"
                    android:paddingBottom="4dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/thursdayIC"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginEnd="8dp"
                android:orientation="vertical">
                <ImageView
                    android:paddingTop="4dp"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/w_thursday"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thursday"
                    android:textSize="13sp"
                    android:paddingBottom="4dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/fridayIc"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:orientation="vertical">
                <ImageView
                    android:paddingTop="4dp"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/w_friday"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Friday"
                    android:textSize="13sp"
                    android:paddingBottom="4dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/daySaveDayBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:background="@drawable/sh_shape_button_starter"
        app:backgroundTint="@color/colorAccent"
        android:layout_marginBottom="12dp"
        android:paddingStart="92dp"
        android:paddingEnd="92dp"
        android:layout_gravity="center|bottom"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>