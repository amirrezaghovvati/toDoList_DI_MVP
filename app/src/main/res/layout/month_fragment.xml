<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:background="@drawable/sh_shape_layouts_full"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/quitIc"
                android:layout_weight="1"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/baseline_exit_to_app_24"
                android:rotation="180"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"/>
            <ImageView
                android:id="@+id/clearAllIc"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                android:src="@drawable/baseline_clear_all_24"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginBottom="8dp"
            >
            <TextView
                android:id="@+id/tvNameMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello Amirreza"
                android:textColor="@color/black"
                android:layout_marginStart="16dp"
                android:layout_marginTop="22dp"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvNameMonth"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="18dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/product_sans_bold"
                android:gravity="top"
                android:text="Month List"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/avatarIc"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="18dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="24dp"
                android:src="@drawable/g_one" />




        </RelativeLayout>

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMonthList"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="162dp"
        tools:listitem="@layout/day_item"/>
    <LinearLayout
        android:id="@+id/emptyStateDay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="390dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:src="@drawable/empty_state_days"
            android:layout_marginTop="24dp"
            android:layout_marginStart="46dp"
            android:layout_marginEnd="46dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="There is no date for your task"/>
        <TextView
            android:id="@+id/addMonthTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:textColor="@color/colorAccent"
            android:text="Add Your Date"/>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addMonth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/baseline_add_24"
        android:backgroundTint="@color/colorAccent"
        app:tint="@color/white"/>
</FrameLayout>